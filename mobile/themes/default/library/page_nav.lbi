<!DOCTYPE html>
<html manifest="/manifest/tmallCateAppCache.manifest">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<meta charset="utf-8">   
<title>类目导航-{$page_title}</title>        
<meta content="width=device-width,initial-scale=1.0,maximum-scale=1.0,minimum-scale=1.0,user-scalable=no" name="viewport">     
<meta content="yes" name="apple-mobile-web-app-capable">     
<meta content="black" name="apple-mobile-web-app-status-bar-style">     
<meta content="telephone=no" name="format-detection">    
<LINK rel=apple-touch-icon-precomposed href="themes/default/images/touch-icon.png">
<LINK rel="shortcut icon" type=image/x-icon href="themes/default/images/favicon2.ico"> 
<LINK rel=stylesheet type=text/css href="themes/default/allcate.css">
</head>
<body>
<div class="top-menu">
	<div class="top-menu-hd">
		<ul>
			<li>
				<a href="javascript:;" id="all-cate">{if $search_keywords}{$search_keywords|escape}{else}{$cat_name}{/if}</a>
			</li>
			<li>
				<a href="javascript:;">全城</a>
			</li>
			<li class="last">
				<a href="javascript:;">默认排序</a>
			</li>
		</ul>
	</div>
	<div class="top-menu-bd hidden" id="all-cate-bd">
		<ul class="top-parent-nav">
      <li class="cur"><a href="#">全部分类</a></li>
      <!--{foreach from=$categories item=cat name=no }-->
      {if $cat.cat_id}
        <li><a href="javascript:;" data-url="{$cat.url}">{$cat.name|escape:html}</a></li>
      {else}
        <li><a href="{$cat.url}">{$cat.name|escape:html}</a></li>         
      {/if} 
      <!--{/foreach}-->
		</ul>
        <div class="top-childs">
      <!--{foreach from=$categories item=cat name=no }-->
        	<div class="top-child-item hidden">
            {if $cat.cat_id}
        		<ul>
              <li><a href="{$cat.url}">全部</a></li>
              <!--{foreach from=$cat.cat_id item=child name=no1 }-->
        			<li><a href="{$child.url}">{$child.name|escape:html}</a></li>
              <!--{/foreach}-->
        		</ul>
            {/if}
        	</div>
    <!--{/foreach}-->
        </div>
	</div>
</div> 
<script>
  $(function() {
  	 //全部分类
  	 $('#all-cate').on('click', function() {
  	 	$('#all-cate-bd').toggleClass('hidden');
  	 });
  	 //导航的点击
  	 var $childs = $('.top-childs .top-child-item');
  	 $('.top-parent-nav li').on('click', function() {
  	 	var index = $(this).index() - 1;
  	 	$(this).addClass('cur');
  	 	$(this).siblings().removeClass('cur');
  	 	$childs.hide();
      if (index < 0) {
        return;
      }
      $childs.eq(index).show();
  	 });
  })
</script>
<!-- <div class="ccontainer" id="content">   
 </div> -->
 <div class="ccontainer" id="contentsub" style="display:none;">     
<div class="cheader">  
<div class="chome"><a class="chome_bg" href="javascript:void(0)" id="allClass"><nav id="h5back_nick">全部分类</nav></a>         
</div> 
</div>
<div class="clist" id="level3">      
</div> 
</div> 

<SCRIPT src="themes/default/js/zepto.min.js"></script>
<SCRIPT src="themes/default/js/cate.js"></script></body></html>